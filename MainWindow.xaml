<Window x:Class="TravelingSalesman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelingSalesman"
        mc:Ignorable="d"
        Title="MainWindow" Width="1000" Height="1000">
    <Grid Background="#333333">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="85*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Slider  Width="300" Minimum="3" Maximum="20" Value="{Binding NodesCount}"/>
            <Label Content="{Binding NodesCount}" FontSize="20" HorizontalAlignment="Center" Foreground="White"/>
            <Button Content="Draw" Foreground="White" Background="#222222" FontSize="25" Width="100" Height="auto"
                    Click="DrawButton_Click"/>
            <Button Content="Populate" Foreground="White" Background="#222222" FontSize="25" Width="100" Height="auto"
                    Click="PopulateButton_Click"/>
        </StackPanel>
        <Canvas Grid.Row="1" x:Name="canvas" Background="White" Width="800" Height="800" HorizontalAlignment="Center"/>
    </Grid>
</Window>
